{
  "name": "@penrod/cli-builder",
  "version": "0.0.12",
  "description": "Scaffolds out a new cli project",
  "main": "./dist/index.js",
  "bin": {
    "cli-builder": "./bin/run"
  },
  "files": [
    "dist",
    "bin"
  ],
  "scripts": {
    "publish:patch": "npm version patch && npm publish --access public",
    "publish:minor": "npm version minor && npm publish --access public",
    "publish:major": "npm version major && npm publish --access public",
    "preversion": "npm run tslint && npm run test",
    "tslint": "tslint --project ./tsconfig.json",
    "test": "jest",
    "prepublishOnly": "npm run build",
    "build": "npm run clean && npm run compile",
    "compile": "tsc && npm run copyfiles",
    "clean": "rimraf dist tsconfig.tsbuildinfo",
    "postpublish": "git push && git push --tags",
    "copyfiles": "copyfiles --all --up=1 ./src/static-directory-structure/**/* ./dist",
    "tsc": "tsc"
  },
  "author": "Michael Penrod <therealnerdybeast@gmail.com>",
  "license": "ISC",
  "dependencies": {
    "@nestjs/common": "^6.11.11",
    "@nestjs/core": "^6.11.11",
    "@types/node": "^13.9.0",
    "commander": "^4.1.1",
    "copyfiles": "^2.2.0",
    "debug": "^4.1.1",
    "fs-extra": "^8.1.0",
    "inquirer": "^7.1.0",
    "reflect-metadata": "^0.1.13",
    "rxjs": "^6.5.4",
    "tslib": "^1.11.1"
  },
  "devDependencies": {
    "@nestjs/testing": "^6.11.11",
    "@types/debug": "^4.1.5",
    "@types/fs-extra": "^8.1.0",
    "@types/inquirer": "^6.5.0",
    "@types/jest": "^25.1.4",
    "jest": "^25.1.0",
    "rimraf": "^3.0.2",
    "ts-jest": "^25.2.1",
    "ts-node": "^8.6.2",
    "tslint": "^6.1.0",
    "typescript": "^3.8.3"
  },
  "jest": {
    "preset": "ts-jest",
    "testEnvironment": "node",
    "roots": [
      "src"
    ],
    "collectCoverageFrom": [
      "./src/**/*.ts",
      "!./src/index.ts",
      "!./src/local-development.ts",
      "!./src/modules/main/MainService.ts"
    ]
  }
}
