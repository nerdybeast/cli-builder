{
  "name": "@penrod/cli-builder",
  "version": "0.0.3",
  "description": "Scaffolds out a new cli project",
  "main": "./dist/index.js",
  "bin": {
    "cli-builder": "./dist/index.js"
  },
  "scripts": {
    "publish:patch": "npm version patch && npm publish --access public",
    "publish:minor": "npm version minor && npm publish --access public",
    "publish:major": "npm version major && npm publish --access public",
    "preversion": "npm run tslint && npm run test",
    "tslint": "tslint --project ./tsconfig.json",
    "test": "jest",
    "prepublishOnly": "npm run build",
    "build": "npm run clean && tsc",
    "clean": "rimraf dist tsconfig.tsbuildinfo",
    "postpublish": "git push && git push --tags"
  },
  "author": "Michael Penrod <therealnerdybeast@gmail.com>",
  "license": "ISC",
  "dependencies": {
    "@nestjs/common": "^6.9.0",
    "@nestjs/core": "^6.9.0",
    "@types/node": "^12.12.6",
    "commander": "^4.0.0",
    "fs-extra": "^8.1.0",
    "inquirer": "^7.0.0",
    "reflect-metadata": "^0.1.13",
    "rxjs": "^6.5.3",
    "tslib": "^1.10.0"
  },
  "devDependencies": {
    "@nestjs/testing": "^6.9.0",
    "@types/fs-extra": "^8.0.1",
    "@types/inquirer": "^6.5.0",
    "@types/jest": "^24.0.22",
    "jest": "^24.9.0",
    "rimraf": "^3.0.0",
    "ts-jest": "^24.1.0",
    "ts-node": "^8.4.1",
    "tslint": "^5.20.1",
    "typescript": "^3.7.2"
  },
  "jest": {
    "preset": "ts-jest",
    "testEnvironment": "node",
    "roots": [
      "src"
    ],
    "collectCoverageFrom": [
      "./src/**/*.ts",
      "!./src/index.ts",
      "!./src/local-development.ts",
      "!./src/modules/main/MainService.ts"
    ]
  }
}
